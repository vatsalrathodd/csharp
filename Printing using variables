using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Giraffe
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string name = "Tom morvolo Riddle";
            int age = 35;

            Console.WriteLine("Once upon a time a man named " + name + " was there");
            Console.WriteLine("His age was " + age);
            Console.WriteLine("He really liked name " + name);
            Console.WriteLine("But didn't like being " + age);

            Console.ReadLine();
        }
    }
}
